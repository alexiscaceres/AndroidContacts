<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dcaceres.project.UserActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/userIV_foto"
            android:layout_width="311dp"
            android:layout_height="74dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/userET_primerNombre"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Primer Nombre" />

        <EditText
            android:id="@+id/userET_primerApellido"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Primer Apellido" />

        <EditText
            android:id="@+id/userET_direccion"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="dirección" />

        <EditText
            android:id="@+id/userET_ciudad"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="ciudad" />

        <EditText
            android:id="@+id/userET_telefono"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="telefono" />

        <EditText
            android:id="@+id/userET_correo"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="correo" />

        <EditText
            android:id="@+id/userET_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Contraseña" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.00"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/userBT_agregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar Usuario" />

            <Button
                android:id="@+id/userBT_generarQR"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:text="Generar QR"
                android:layout_weight="0.02" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
